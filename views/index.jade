extends layout

block content
    h1 Welcome to #{title}
    p This is your balance: #{balance}
    form(method="post")
        div.input
            span.label Title
            input(type="text", name="title")
        div.input
            span.label Description
            textarea(name="description", cols="40", rows="5")
        div.actions
            input(type="submit", value="add")
